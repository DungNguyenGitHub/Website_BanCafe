@model WebCafe.Models.TinTuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}


<head>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/css/css_content.css">
</head>

<body>

    @* Vị trí trang *@
    @await Html.PartialAsync("_PartialLocationPage")


    <!-- ##### Intro News Area Start ##### -->
    <section class="intro-news-area section-padding-100-0 mb-70">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Intro News Tabs Area -->
                <div class="col-12 col-lg-8">
                    <div class="intro-news-tab">

                        <!-- Intro News Filter -->
                        <div class="intro-news-filter d-flex justify-content-between">
                            <h6>Chi Tiết Tin Tức</h6>
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link active" id="nav1" data-toggle="tab" href="#nav-1" role="tab" aria-controls="nav-1" aria-selected="true">Tin Mới</a>
                                    <a class="nav-item nav-link" id="nav2" data-toggle="tab" href="#nav-2" role="tab" aria-controls="nav-2" aria-selected="false">Giảm Giá</a>
                                    <a class="nav-item nav-link" id="nav3" data-toggle="tab" href="#nav-3" role="tab" aria-controls="nav-3" aria-selected="false">Sản Phẩm Mới</a>
                                    <a class="nav-item nav-link" id="nav4" data-toggle="tab" href="#nav-4" role="tab" aria-controls="nav-4" aria-selected="false">Cửa Hàng</a>
                                </div>
                            </nav>
                        </div>

                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-1" role="tabpanel" aria-labelledby="nav1">
                                <div class="row">
                                    @if (Model.LoaiTin == false)
                                    {
                                        <!-- Single News Area -->
                                        <div class="col-12">
                                            <div class="single-blog-post style-2 mb-5">
                                                <!-- Blog Thumbnail -->
                                                <div class="blog-thumbnail">
                                                    <a href=""><img src="@Url.Content("~/img/tintuc/"+@Model.AnhTt)" alt=""></a>
                                                </div>

                                                <!-- Blog Content -->
                                                <div class="blog-content">
                                                    <span class="post-date">@Model.CreateDate.ToString("dd/MM/yyyy")</span>
                                                    <a href="#" class="post-title">@Model.TenTt</a>
                                                    <a href="#" class="post-author mb-30">Người viết @Model.Tacgia</a>
                                                    <a href="" class="post-title"><h4>@Model.Motangan</h4></a>
                                                    <p>@Html.DisplayFor(model => model.Motadai)</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <!-- Single News Area -->
                                        <div class="col-12">
                                            <div class="single-blog-post style-2 mb-5">
                                                <!-- Blog Thumbnail -->
                                                <div class="blog-thumbnail">
                                                    <video autoplay controls>
                                                        <source src="@Model.AnhTt">
                                                    </video>
                                                </div>

                                                <!-- Blog Content -->
                                                <div class="blog-content">
                                                    <span class="post-date">@Model.CreateDate.ToString("dd/MM/yyyy")</span>
                                                    <a href="#" class="post-title">@Model.TenTt</a>
                                                    <a href="#" class="post-author mb-30">Người viết @Model.Tacgia</a>
                                                    <a href="" class="post-title"><h4>@Model.Motangan</h4></a>
                                                    <p>@Html.DisplayFor(model => model.Motadai)</p>
                                                </div>
                                            </div>
                                        </div>
                                    }


                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Sidebar Widget -->
                <div class="col-12 col-sm-9 col-md-6 col-lg-4">
                    <div class="sidebar-area">

                        <!-- Latest News Widget -->
                        <div class="single-widget-area news-widget mb-30">
                            <h4>Các Bài Viết Khác</h4>
                            @{
                                WebCafe.Models.CuaHangBanCafeContext db = new WebCafe.Models.CuaHangBanCafeContext();
                                var tintuc = db.TinTucs.Where(p => p.LoaiTin == false);
                            }
                            @foreach (var item in tintuc)
                            {
                                <!-- Single News Area -->
                                <div class="single-blog-post d-flex style-4 mb-30">
                                    <!-- Blog Thumbnail -->
                                    <div class="blog-thumbnail">
                                        <a asp-action="Details" asp-route-id="@item.MaTt">
                                            <img src="@Url.Content("~/img/tintuc/"+@item.AnhTt)" alt="">
                                            </a>
                                    </div>

                                    <!-- Blog Content -->
                                    <div class="blog-content">
                                        <span class="post-date">@item.CreateDate</span>
                                        <a asp-action="Details" asp-route-id="@item.MaTt" class="post-title">@item.TenTt</a>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

