@model IEnumerable<WebCafe.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css">
    <!--Hỗ trợ filter, sort, paging trong các bảng-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
</head>
<div class="col-12">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h4>Quản Lý Sản Phẩm</h4>
            <p>
                <a asp-action="Create" class="btn btn-primary" style="margin-top:20px;">Thêm Sản Phẩm</a>
            </p>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table id="example" class="table align-items-center justify-content-center mb-0 table-striped" style="font-size:20px;">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">Sản Phẩm</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">Danh Mục</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Giá Sản Phẩm</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Số Lượng</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Ngày Sửa</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Trạng Thái</th>
                            <th></th> <!--Cột này cho nút chi tiết-->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2">
                                        <div>
                                            <img src="@Url.Content("~/img/product/" + item.AnhSp)" class="avatar avatar-sm me-2">
                                        </div>
                                        <div class="my-auto">
                                            <h6 class="mb-0 text-sm font-weight-bold" style="font-size:12px;"> @item.TenSp </h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="font-weight-bold" style="font-size:12px;"> @item.MaDmNavigation.TenDm </span>
                                </td>
                                <td>
                                    <span class="font-weight-bold" style="font-size:12px;">@item.GiaSp.ToString("#,##0") Vnđ</span>
                                </td>
                                <td>
                                    <span class="text-xs font-weight-bold"> @item.SoLuong </span>
                                </td>
                                <td>
                                    <span class="text-xs font-weight-bold">@item.CreateDate.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    <span class="text-xs font-weight-bold">@item.TrangThai</span>
                                </td>

                                <td class="align-middle">

                                    <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-primary" style="font-size:12px;">Xem</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/datatables-bt5.js"></script>
