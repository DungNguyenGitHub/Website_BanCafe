@using static WebCafe.Models.DanhMucSp
@model WebCafe.Models.DanhMucSp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        #GioiTinh {
            border: none;
            border-radius: 14px;
            margin-top: 30px;
            background-color: #fff;
            padding: 6px;
        }
    </style>
</head>

<div class="card-body" style="margin-top:40px;background-color: var(--bs-body-bg); border-radius:12px; padding:20px;">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaDm" />
                <a asp-action="Index" style="font-size:30px;"><i class='bx bx-arrow-back'></i></a>
                <h4>Sửa Danh Mục</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="TenDm" class="control-label">Tên Danh Mục</label>
                    <input asp-for="TenDm" class="form-control" />
                    <span asp-validation-for="TenDm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnhDm" class="control-label">Link Ảnh Danh Mục</label>
                    <input asp-for="AnhDm" class="form-control" />
                    <span asp-validation-for="AnhDm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MoTaDm" class="control-label">Mô Tả Danh Mục</label>
                    <input asp-for="MoTaDm" class="form-control" />
                    <span asp-validation-for="MoTaDm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrangThai" class="control-label"></label>
                    @Html.DropDownListFor(m => m.TrangThai,
                    new SelectList(Enum.GetValues(typeof(Category))),"")
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>