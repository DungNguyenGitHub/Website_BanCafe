@*@model IEnumerable<WebCafe.Models.DonHang>*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
</head>
<div class="col-12">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h4>Quản Lý Đơn Hàng</h4>
        </div>

        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table id="example" class="table align-items-center justify-content-center mb-0 table-striped" style="font-size:20px;">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">Mã Đơn Hàng</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">Tên Khách Hàng</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder ">Hình Thức TT</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Tổng Tiền</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder  ps-2">Ngày Tạo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2">
                                        <div class="my-auto">
                                            <h6 class="mb-0 text-sm font-weight-bold" style="font-size:12px;"> @item.MaDh</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="font-weight-bold" style="font-size:12px;"> @item.TenKh </span>
                                </td>
                                <td>
                                    <span class="font-weight-bold" style="font-size:12px;">COD - Thanh Toán Khi Nhận</span>
                                </td>
                                <td>
                                    <span class="font-weight-bold" style="font-size:12px;">@item.TongTien.ToString("#,##0") VNĐ</span>
                                </td>
                                <td>
                                    <span class="text-xs font-weight-bold">@item.NgayTao.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td class="align-middle">

                                    @*<a asp-action="Details" asp-route-id="@item.MaDh" class="btn btn-primary" style="font-size:12px;">Xem</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/datatables-bt5.js"></script>

